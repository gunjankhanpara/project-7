<%- include('header')%>
        
        
        <!-- Content wrapper -->
        <div class="content-wrapper">
            <!-- Content -->
  
            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">BLOG</span> Vertical Layouts</h4>
  
              <!-- Basic Layout -->
              <div class="row">
                <div class="col-xl">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">ADD Catagory</h5>
                      <small class="text-muted float-end">Default label</small>
                    </div>
                    <div class="card-body">
                      <form action="/insertData" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                          <input type="hidden" name="editid" value="<%=single.id%>">
                          <label class="form-label" for="basic-default-fullname">Title</label>
                          <input type="text" class="form-control" id="productname" name="title" value="<%=single.title %>" placeholder="enter title" />
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-company">Discription</label>
                          <input type="text" class="form-control" id="productprice" name="discription" value="<%=single.discription %>" placeholder=" enter Discription" />
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-phone">Select IMG</label>
                          <input type="file" id="productimg" class="form-control phone-mask" name="avatar" placeholder="upload img" />
                          <% if(single){ %>
                            <img src="<%= single.avatar%>" alt="pic" width="50px">
                          <% } %>
                        </div>
                        <% if(single){ %>
                          <input type="submit" value="edit" class="btn btn-primary">
                        <% } else{ %>
                          <input type="submit" class="btn btn-primary" value="submit"></input>
                       <% } %>
                      </form>
                    </div>
                  </div>
                </div>
  
              </div>
            </div>
            <!-- / Content -->
  
  
  
            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->


<%- include('footer')%>