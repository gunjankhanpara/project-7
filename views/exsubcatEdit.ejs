<%- include('header') %>

    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Update-Extra-Sub-Category</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <form class="form-horizontal" method="post" action="/postExedit">
                                    <input type="hidden" value="<%=single.id%>" name="editid">
                                    <div class="card-body">
                                        <h4 class="card-title">UpdateExtraSubCategory</h4>
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-right control-label col-form-label">Category
                                                Name</label>
                                            <div class="col-sm-9">
                                                <!-- <input type="text" name="category" class="form-control" id="fname" value="" placeholder="Enter Category"> -->
                                                <select name="category" class="form-control" disabled>
                                                    <option value="">---Select Category---</option>
                                                    <% category.map((val)=>{ %>
                                                        <option readonly <% if(val.id == single.categoryid) { %> selected <% } %> value="<%= val.id %>" ><%= val.category %></option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-right control-label col-form-label">Sub Category
                                                Name</label>
                                            <div class="col-sm-9">
                                                <!-- <input type="text" name="category" class="form-control" id="fname" value="" placeholder="Enter Category"> -->
                                                <select name="subcategory" class="form-control" disabled>
                                                    <option>---Select Sub Category---</option>
                                                    <% subcategory.map((val)=>{ %>
                                                        <option <% if(val.id == single.subcategory) { %> selected <% } %> value="<%= val.id %>" ><%= val.subcategory %></option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-right control-label col-form-label">Extra Sub
                                                Category</label>
                                            <div class="col-sm-9">
                                                <input type="text" value="<%= single.exsubcategory %>" name="exsubcategory" class="form-control" id="fname"
                                                    placeholder="Enter Extra Sub-Category">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="border-top">
                                        <div class="card-body">
                                            <input type="submit" value="Edit" class="btn btn-primary"></input>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- editor -->
                    <!-- ============================================================== -->
                    <!-- End PAge Content -->
                    <!-- ============================================================== -->
                    <!-- ============================================================== -->
                    <!-- Right sidebar -->
                    <!-- ============================================================== -->
                    <!-- .right-sidebar -->
                    <!-- ============================================================== -->
                    <!-- End Right sidebar -->
                    <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <footer class="footer text-center">
            All Rights Reserved by Matrix-admin. Designed and Developed by <a
