<%- include('header')%>


    <!-- Content wrapper -->
    <div class="content-wrapper">
        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span> Product</h4>

            <!-- Basic Layout -->
            <div class="row">
                <div class="col-xl">
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">ADD Product</h5>
                            <small class="text-muted float-end">Default label</small>
                        </div>
                        <div class="card-body">
                            <form action="/postproduct" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-phone">Select Category</label>
                                    <select name="category" id="">
                                        <option value="">--select category--</option>
                                        <% category.map((val)=>{ %>
                                            <option value="<%= val.id %>"><%= val.category %></option>

                                        <% })%>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-phone">Select SubCategory</label>
                                    <select name="subcategory" id="">
                                        <option value="">--select sub- category--</option>
                                        <% subcatogory.map((val)=>{ %>
                                            <option value="<%= val.id %>"><%= val.subcategory %></option>

                                        <% }) %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-phone">Select extre-Category</label>
                                    <select name="exsubcategory" id="">
                                        <option value="">--select sub- category--</option>
                                        <% exsubadd.map((val)=>{ %>
                                            <option value="<%= val.id %>"><%= val.exsubcategory %></option>

                                        <% })%>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-phone">Select Product title</label>
                                    <input type="text" id="productimg" class="form-control phone-mask" name="title"
                                        placeholder="Product title" />

                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-phone">Select Product que</label>
                                    <input type="text" id="productimg" class="form-control phone-mask" name="que"
                                        placeholder="Product que" />

                                </div>
                                <div class="mb-3">
                                    <input type="hidden" name="editid">
                                    <label class="form-label" for="basic-default-fullname">Product Price</label>
                                    <input type="text" class="form-control" id="productname" name="price"
                                        placeholder="Product Price" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-company">Discription</label>
                                    <input type="text" class="form-control" id="productprice" name="discription"
                                        placeholder="Enter Discription" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-phone">Select IMG</label>
                                    <input type="file" id="productimg" class="form-control phone-mask" name="avatar"
                                        placeholder="upload img" />

                                </div>
                                <input type="submit" value="submit" class="btn btn-primary">

                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- / Content -->


        <table>
            <tr>
                <th>category</th>
                <th>subcategory</th>
                <th>exsubcategory</th>
                <th>Product title</th>
                <th>Product que</th>
                <th>Product Price</th>
                <th>Enter Discription</th>
                <th>img</th>
                <th>action</th>
            </tr>
        
        <tbody>
            <% product.map((val)=>{ %>
                <tr>
                    <td><%= val.category.category %></td>
                    <td><%= val.subcategory.subcategory%></td>
                    <td><%= val.exsubcategory.exsubcategory%></td>
                    <td><%= val.title%></td>
                    <td><%= val.que%></td>
                    <td><%= val.price%></td>
                    <td><%= val.discription%></td>
                    <td><img src="<%= val.avatar%>" alt="pic" style="width: 100px;"></td>
                    <td>
                        <a href="" class="btn btn-icon btn-outline-secondary">
                          <i class="bx bx-trash-alt"></i>
                        </a>

                      </td>
                      <td>
                        <a href="/editproduct" class="btn btn-icon btn-outline-danger">
                          <i class="bx bx-link-alt"></i>
                        </a>

                      </td>
                </tr>

            <% })%>
        </tbody>
    </table>

        <div class="content-backdrop fade"></div>
    </div>
    <!-- Content wrapper -->


    <%- include('footer')%>