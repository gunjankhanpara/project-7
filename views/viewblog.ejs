<%- include('header')%>
  <div class="col-md-6 col-12 mt-3 ms-3">
    <div class="card">
      <% if(massege.danger.length > 0){%>
        <div class="alert alert-danger" role="alert">
          <%= massege.danger %>
        </div>
      <% } %>
      <h5 class="card-header">View Blog</h5>
      <div class="card-body">
        <p>Display Blog from social accounts on your site</p>

        <!-- Social Accounts -->
        <% viewdata.map((val)=>{ %>
          <% const{id,title,discription,avatar}=val%>

            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
              <img src="<%= avatar%>" alt="pic" class="me-3" height="30"/>
            </div>
            <div class="flex-grow-1 row">
              <div class="col-8 col-sm-7 mb-sm-0 mb-2">
                <h6 class="mb-0">
                  <%= title %>
                </h6>
                <small class="text-muted">
                  <%= discription %>
                </small>
              </div>
              <div class="col-4 col-sm-5 text-end">
                <a href="/deletedata?id=<%=id%>" class="btn btn-icon btn-outline-secondary">
                  <i class="bx bx-trash-alt"></i>
                </a>
                <a href="/editdata?id=<%=id%>" class="btn btn-icon btn-outline-danger">
                  <i class="bx bx-link-alt"></i>
                </a>
              </div>
            </div>
          </div>
            <% }) %>
              <!-- /Social Accounts -->
      </div>
    </div>
  </div>

  <%- include('footer')%>